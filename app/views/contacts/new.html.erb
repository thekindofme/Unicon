<h1>New Contact</h1>
<br>

<% form_for(@contact) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login_name %><br />
    <%= f.text_field :login_name %>
  </p>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note, :cols=>50, :rows=>3 %>
  </p>
  <p>
    <%= f.label :contact_source %><br/>
    <%= f.select :contact_source, @contact_sources.collect {|c| [ c.name, c.id ] } %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', contacts_path %>
